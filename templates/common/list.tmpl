{{template "header"}}
  <script src="/static/javascript/shareLink.js"></script>
    <p>Number of files: {{ len .files }}</p>
    <ul>
      {{ range .files}}
      <li>
        {{ if eq .File.Mode.IsDir true }}
          <a href="/list?dir={{.Path}}">
        {{ else }}
          <a href="/info?dir={{.Path}}">
        {{ end }}
          {{ .File.Name }}
        </a>
        <a href="/down?dir={{.Path}}" dir="{{.Path}}">
          <input type="button", name="downlaod" value="download"/>
        </a>
        <input type="button", name="share" value="share" onClick="add({{.File.Name}})">
      </li>
      {{ end }}
    </ul>

    <form action="/upload" enctype="multipart/form-data" method="post">
      <p>
        type some text(optionally):<br>
        <input type="text" name="textline" size="30">
      </p>
      <p>
        please specify a file, or a set of files: <br>
        <input type="file", name="image" size="40">
      </p>
      <div>
        <input type="submit" value="send">
      </div>
    </form>
{{template "footer"}}
